@model FotoDB.Models.KrajModel

@{
    ViewData["Title"] = "Edytujesz kraj: " + ViewData.Model.Nazwa;
}

<h1>Edytujesz kraj: @Html.DisplayFor(model => model.Nazwa)</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KrajModelID" />
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.KrajModelID" class="btn btn-info">Powrót do szczegółów</a>
    <a asp-action="Index" class="btn btn-info">Powrót do listy krajów</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
