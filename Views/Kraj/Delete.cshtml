@model FotoDB.Models.KrajModel

@{
    ViewData["Title"] = "Usuń kraj";
}

<h1>Usuń kraj</h1>

<h3>Czy na pewno chcesz usunąć ten kraj z bazy danych?</h3>
<div>
    <h4>KrajModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KrajModelID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KrajModelID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirm" asp-route-id="@Model.KrajModelID">
        <input type="hidden" asp-for="KrajModelID" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Details" asp-route-id="@Model.KrajModelID" class="btn btn-info">Powrót do szczegółów</a>
        <a asp-action="Index" class="btn btn-info">Powrót do listy krajów</a>
    </form>
</div>
