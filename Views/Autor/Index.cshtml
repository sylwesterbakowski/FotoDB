@model IEnumerable<FotoDB.Models.AutorModel>

@{
    ViewData["Title"] = "Autorzy";
}

<h1>Autorzy</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nowego</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AutorModelID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KrajModelID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AutorModelID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KrajModelID)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.AutorModelID" class="btn btn-info">Pokaż szczegóły</a>
            </td>
        </tr>
}
    </tbody>
</table>
