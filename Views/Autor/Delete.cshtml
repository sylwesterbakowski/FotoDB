@model FotoDB.Models.AutorModel

@{
    ViewData["Title"] = "Usuń autora";
}

<h1>Usuń autora</h1>

<h3>Czy na pewno chcesz usunąć tego autora z bazy danych?</h3>
<div>
    <h4>AutorModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AutorModelID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AutorModelID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwisko)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nazwisko)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KrajModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KrajModel.Nazwa)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirm" asp-route-id="@Model.AutorModelID">
        <input type="hidden" asp-for="AutorModelID" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Details" asp-route-id="@Model.AutorModelID" class="btn btn-info">Powrót do szczegółów</a>
        <a asp-action="Index" class="btn btn-info">Powrót do listy autorów</a>
    </form>
</div>
